<% if flash[:errors] %>

  <ul>
    <% flash[:errors].each do |err_message| %>
      <li>
        <%= err_message %>
      </li>
    <% end %>
  </ul>

<% end %>

<%= form_for @leprechaun do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :gold_count %>
  <%= f.number_field :gold_count %>
  <%= f.label :height %>
  <%= f.number_field :height %>
  <%= f.submit %>
<% end %>
